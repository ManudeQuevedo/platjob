{{#if blahUser}}
<h1>Welcome {{user.firstname}}!</h1>
<h3>Account information:</h3>

<p>Full Name: {{blahUser.firstname}} {{blahUser.lastname}}</p>
<p>Usename: {{blahUser.username}}</p>
<p>Email: {{blahUser.email}}</p>
<p>Role: {{blahUser.role}}</p>
<a href="/views/admin-views/edit-page.hbs">Edit Profile Information</a>
<br>
{{/if}}
<br>
{{#if blahUser.isAdmin}}
<br>
<h2>User Info</h2>
<a href="/view-users">See User List</a>
<ul>
  {{#each userList}}
  <li>
    <h3>{{this.firstname}} {{this.lastname}}</h3>
    <ul>
      <li>User ID: {{this._id}}</li>
      <li>Username: {{this.username}}</li>
      <li>Email: {{this.email}}</li>
    </ul>
    <form action="/dashboard/{{this._id}}" method="post">
      <button>Delete User</button>
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
{{#if blahUser.isCompany}}
<hr>
<h2>Posted Jobs</h2>
<a href="/views/admin-views/edit-page.hbs">See Posted Jobs</a>
<ul>
  {{#each userList}}
  <li>
    <h3>{{this.firstname}} {{this.lastname}}</h3>
    <ul>
      <li>User ID: {{this._id}}</li>
      <li>Username: {{this.username}}</li>
      <li>Email: {{this.email}}</li>
    </ul>
    <form action="/delete-user/{{this._id}}" method="post">
      <button>Delete User</button>
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
<a href="/logout">Logout</a>
